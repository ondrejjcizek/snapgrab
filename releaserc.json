{
    "branches": ["main"],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/changelog",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "npm run build"
            }
        ],
        "@semantic-release/npm",
        [
            "semantic-release-replace-plugin",
            {
                "replacements": [
                    {
                        "files": ["README.md"],
                        "from": "snapgrab@\\d+\\.\\d+\\.\\d+", // Matches "snapgrab@0.0.9"
                        "to": "snapgrab@${nextRelease.version}", // Replaces with new version
                        "results": [
                            {
                                "file": "README.md",
                                "hasChanged": true,
                                "numMatches": 1,
                                "numReplacements": 1
                            }
                        ],
                        "countMatches": true
                    },
                    {
                        "files": ["README.md"],
                        "from": "\"snapgrab\": \"\\^\\d+\\.\\d+\\.\\d+\"", // Matches "snapgrab": "^0.0.9"
                        "to": "\"snapgrab\": \"^${nextRelease.version}\"", // Replaces with new version
                        "results": [
                            {
                                "file": "README.md",
                                "hasChanged": true,
                                "numMatches": 1,
                                "numReplacements": 1
                            }
                        ],
                        "countMatches": true
                    }
                ]
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["dist/**/*", "CHANGELOG.md", "package.json", "README.md"],
                "message": "chore(release): ${nextRelease.version} [skip ci]"
            }
        ]
    ]
}
