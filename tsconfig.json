{
    "compilerOptions": {
        "target": "ESNext", // Set the JavaScript language version to compile to
        "module": "ESNext", // Specify the module code generation
        "declaration": true, // Generate .d.ts files
        "emitDeclarationOnly": true, // Only emit .d.ts files, not .js files
        "outDir": "dist", // Output directory for the compiled files
        "allowJs": true, // Allow JavaScript files to be compiled
        "checkJs": true, // Enable type checking on JavaScript files
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "skipLibCheck": true, // Skip type checking of all declaration files
        "forceConsistentCasingInFileNames": true // Ensure consistent casing in file names
    },
    "include": ["src/**/*"], // Include all JavaScript files in the 'src' directory
    "exclude": ["node_modules", "dist"] // Exclude the node_modules and dist directories
}
